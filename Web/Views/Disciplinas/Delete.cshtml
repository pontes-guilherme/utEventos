@model Modelo.DAO.Disciplina

@{
    ViewBag.Title = "Excluir Disciplina";
}

@{
    if (object.Equals(System.Web.HttpContext.Current.Session["tipo"], "Administrador"))
    {
        <h2>Excluir Disciplina</h2>

        <h3>Você tem certeza que deseja excluir esta disciplina?</h3>
        <div>
            <h4>@Html.DisplayFor(model => model.nome)</h4>
            <hr />
            <dl class="dl-horizontal">
            </dl>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-default" /> |
                    @Html.ActionLink("Voltar à lista de disciplinas", "Index")
                </div>
            }
        </div>
    }
    else
    {
        @RenderPage("~/Views/Shared/_NotAuthorized.cshtml")
    }

}
 
