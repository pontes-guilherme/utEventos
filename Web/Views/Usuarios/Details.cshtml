        if (object.Equals(ViewContext.RouteData.Values["id"], System.Web.HttpContext.Current.Session["email"]))
        {
            @Html.ActionLink("Editar", "Edit", new { id = System.Web.HttpContext.Current.Session["email"] + "/" })
