    ViewBag.Title = "Detalhes Sugestão";
}

<h2>Detalhes Sugestão</h2>

<div>
    <h4>Informações sobre a Sugestão</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Título
        </dt>

        <dd>
            @Html.DisplayFor(model => model.titulo)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

